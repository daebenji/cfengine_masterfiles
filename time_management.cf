bundle agent time_management
{
  vars:
  any::
     "ntp_server" string => "no.pool.ntp.org";
  commands:
  any::
    "/usr/sbin/ntpdate $(ntp_server)"
     contain => silent;
     
    "/bin/rm"
    args => "/etc/localtime";
    
    "bin/ln -s"
    args => "/usr/share/zoneinfo/Europe/Berlin /etc/localtime"
}
